{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "functions": {
    "api/index.js": {
      "runtime": "nodejs18.x",
      "includeFiles": "public/**"
    }
  },
  "buildCommand": "cd apps/backend && bun run build",
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "public/index.js"
    }
  ]
}
