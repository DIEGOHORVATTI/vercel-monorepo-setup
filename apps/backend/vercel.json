{
  "version": 2,
  "builds": [
    {
      "src": "public/src/index.js",
      "use": "@vercel/node",
      "config": { "includeFiles": ["public/**"] }
    },
    { "src": "package.json", "use": "@vercel/static-build", "config": { "distDir": "public" } },
    { "src": "public/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "public/src/index.js"
    }
  ]
}
