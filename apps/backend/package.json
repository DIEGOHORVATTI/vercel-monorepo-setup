{
  "name": "backend",
  "version": "0.0.1",
  "main": "dist/index.js",
  "author": "Specc",
  "license": "MIT",
  "private": false,
  "type": "module",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "postbuild": "copyfiles -u 1 public/**/* dist/public",
    "start": "node ./dist/index.js",
    "start:dev": "yarn build && node dist/src/index.js",
    "dev": "nodemon --watch './src/**/*.ts' --ext ts --exec 'yarn start:dev'",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix"
  },
  "dependencies": {
    "copyfiles": "2.4.1",
    "express": "5.1.0",
    "dotenv": "16.5.0",
    "fastify": "5.4.0",
    "node-telegram-bot-api": "0.66.0",
    "nodemon": "3.1.10"
  },
  "devDependencies": {
    "@types/node": "24.0.2",
    "@types/express": "5.0.3",
    "@types/node-telegram-bot-api": "0.64.9",
    "@vercel/node": "5.2.2",
    "eslint": "9.29.0",
    "eslint-config-codex": "2.0.3",
    "typescript": "5.8.3"
  }
}
