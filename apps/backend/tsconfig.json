{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "outDir": "public",
    "baseUrl": "api",
    "rootDir": "api",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "incremental": true,
    "allowJs": true,
    "removeComments": true,
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["api", "package.json"]
}
